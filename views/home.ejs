<%- include("partials/header") -%>

<h1>Home</h1>

<p>
  <%= homeStartingContent %>
</p>

<h2 style="margin-top: 50px ;color: #000; text-align: center;">Publish your passion, your way!!!</h2>

<% posts.forEach(function(post){ %>
<h3>
  <%= post.title %>
</h3>
<p>
  <%= post.body.substring(0, 100) + "..." %>
  <a href="<%= "/posts/" + post.title %>">Read More</a>
</p>
<% });%>


